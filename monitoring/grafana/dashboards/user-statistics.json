{
  "uid": "user-statistics",
  "title": "User Statistics",
  "tags": ["users", "statistics"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Users",
      "targets": [
        {
          "expr": "devops_playground_users_total OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Active Users (24h)",
      "targets": [
        {
          "expr": "devops_playground_users_active OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "New Users Today",
      "targets": [
        {
          "expr": "increase(devops_playground_users_total[24h]) OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "yellow" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "User Registrations Over Time",
      "targets": [
        {
          "expr": "devops_playground_users_total OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Total Users"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Active Users Trend",
      "targets": [
        {
          "expr": "devops_playground_users_active OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Active Users"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}