{
  "uid": "devops-playground-overview",
  "title": "DevOps Playground - Overview",
  "tags": ["devops", "playground"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Users",
      "targets": [
        {
          "expr": "devops_playground_users_total",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Executions",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Success Rate",
      "targets": [
        {
          "expr": "(sum(devops_playground_executions_successful) / sum(devops_playground_executions_total)) * 100",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 50, "color": "yellow" },
              { "value": 80, "color": "green" }
            ]
          },
          "unit": "percent",
          "decimals": 1,
          "max": 100,
          "min": 0
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Active Executions",
      "targets": [
        {
          "expr": "devops_playground_active_executions",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Executions Over Time",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_total)",
          "refId": "A",
          "legendFormat": "Total"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "User Activity",
      "targets": [
        {
          "expr": "devops_playground_users_active",
          "refId": "A",
          "legendFormat": "Active Users"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
    }
  ]
}
