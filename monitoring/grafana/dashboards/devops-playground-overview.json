{
  "uid": "devops-playground-overview",
  "title": "DevOps Playground - Overview",
  "tags": ["devops", "playground", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Users",
      "targets": [
        {
          "expr": "devops_playground_users_total OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Executions",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_total) OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Success Rate",
      "targets": [
        {
          "expr": "(sum(devops_playground_executions_successful) / (sum(devops_playground_executions_total) > 0)) * 100 OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 50, "color": "yellow" },
              { "value": 80, "color": "green" }
            ]
          },
          "unit": "percent",
          "decimals": 1,
          "max": 100,
          "min": 0
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Active Executions",
      "targets": [
        {
          "expr": "devops_playground_active_executions OR on() vector(0)",
          "refId": "A",
          "instant": true
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          },
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Executions Over Time",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_total) OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Total Executions"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "User Activity",
      "targets": [
        {
          "expr": "devops_playground_users_active OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Active Users"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "HTTP Request Rate",
      "targets": [
        {
          "expr": "sum(rate(devops_playground_http_requests_total[5m])) OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Requests/sec"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "WebSocket Connections",
      "targets": [
        {
          "expr": "devops_playground_websocket_connections OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Active Connections"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Database Connections",
      "targets": [
        {
          "expr": "devops_playground_db_connections OR on() vector(0)",
          "refId": "A",
          "legendFormat": "Active Connections"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 20 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "System Load",
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5",
          "refId": "B",
          "legendFormat": "5m"
        }
      ],
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 20 },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}
