{
  "uid": "execution-statistics",
  "title": "Execution Statistics",
  "tags": ["executions", "statistics"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Executions",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Successful",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_successful)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Failed",
      "targets": [
        {
          "expr": "sum(devops_playground_executions_failed)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Currently Running",
      "targets": [
        {
          "expr": "devops_playground_active_executions",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "blue" }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "graph",
      "title": "Execution Rate",
      "targets": [
        {
          "expr": "rate(devops_playground_executions_total[5m])",
          "refId": "A",
          "legendFormat": "Executions/sec"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 }
    },
    {
      "id": 6,
      "type": "graph",
      "title": "Success vs Failed",
      "targets": [
        {
          "expr": "sum(rate(devops_playground_executions_successful[5m]))",
          "refId": "A",
          "legendFormat": "Successful"
        },
        {
          "expr": "sum(rate(devops_playground_executions_failed[5m]))",
          "refId": "B",
          "legendFormat": "Failed"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 5 }
    },
    {
      "id": 7,
      "type": "graph",
      "title": "Executions by Playground",
      "targets": [
        {
          "expr": "sum by (playground) (devops_playground_executions_total)",
          "refId": "A",
          "legendFormat": "{{playground}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 13 }
    },
    {
      "id": 8,
      "type": "graph",
      "title": "Execution Duration",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(devops_playground_execution_duration_seconds_bucket[5m]))",
          "refId": "A",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(devops_playground_execution_duration_seconds_bucket[5m]))",
          "refId": "B",
          "legendFormat": "50th percentile"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 13 }
    }
  ]
}
